# =============================================================================
# RASPBERRY PI COLLECTOR CONFIGURATION
# Copy this to .env and edit with your values
# =============================================================================

# Your Vercel deployment URL
REMOTE_API_URL=https://your-site.vercel.app/api/ingest

# Must match INGEST_API_KEY in your Vercel environment
API_KEY=your-secret-key-here

# MQTT broker (usually localhost if running Mosquitto on the Pi)
MQTT_BROKER=localhost
MQTT_PORT=1883

# AAG Cloudwatcher serial port
# Find with: ls /dev/serial/by-id/ or ls /dev/ttyUSB*
CLOUDWATCHER_PORT=/dev/ttyUSB0
CLOUDWATCHER_BAUD=9600

# Unihedron SQM serial port
SQM_PORT=/dev/ttyUSB1
SQM_BAUD=115200

# AllSky camera latest image path
ALLSKY_IMAGE_PATH=/home/pi/allsky/tmp/image.jpg

# How often to push data (seconds)
PUSH_INTERVAL=60

# Logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
